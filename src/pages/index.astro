---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
	<div class="flex container mx-5 items-center">
	  <div class="grid lg:grid-cols-2 gap-12">
		<div class="my-auto">
		  <h1 class="text-5xl md:text-6xl font-bold tracking-tight">
		    <span class="text-accent">
				Hi, I'm Filip! <span class="inline-block wave">ðŸ‘‹</span><br />
			</span>
			I build products for devs <s>to make their lifes easier</s> because <span class=" text-accent">its fun</span>
		  </h1>
		</div>
		<div>
		  <img
			src="/assets/filip.png"
			class="w-3/4 rounded-lg shadow-lg ml-auto"
			alt="Filip photo inside a green circle"
		  />
		</div>
	  </div>
	</div>
