<style>
.wave {
  animation-duration: 0.75s;
  animation-name: wave;
  animation-delay: 0.5s;
  animation-fill-mode: backwards;
}

@keyframes wave {
  50% {
    transform: rotate(0.25turn);
  }
  100% {
    transform: rotate(0turn);
  }
}
</style>
